
<html>
<head>
    {{> header}}
</head>

<body>

  <h1>Add Articles</h1>

  <div class="container">
  {{> menu}}
  <form action='/users/update-article' method="POST">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="title" class="form-control" value="{{title}}" placeholder="Enter a Title">

  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" class="form-control">{{body}}</textarea>
  </div>
  <input type="hidden" name="articleId" value="{{articleId}}"/>
  <button type="submit" class="btn btn-primary">Submit</button>
  {{#message}}
    <div class="alert alert-danger" role="alert">
        {{message}}
    </div>
  {{/message}}
    {{#information}}
    <div class="alert alert-success" role="alert">
      {{information}}
    </div>
  {{/information}}
</form>

</div>
{{> footer}}
</body>
</html>
